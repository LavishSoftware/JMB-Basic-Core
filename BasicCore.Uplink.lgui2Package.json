{
    "$schema": "http://www.lavishsoft.com/schema/lgui2Package.json",
    "templates":{
        "basicCore.defaultSettings":{
            "launcher":{
            },
            "highlighter":{
                "enable":true
            },
            "hotkeys":{
                "slotHotkeys":[
                    "Ctrl+Alt+1",
                    "Ctrl+Alt+2",
                    "Ctrl+Alt+3",
                    "Ctrl+Alt+4",
                    "Ctrl+Alt+5",
                    "Ctrl+Alt+6",
                    "Ctrl+Alt+7",
                    "Ctrl+Alt+8",
                    "Ctrl+Alt+9",
                    "Ctrl+Alt+0",
                    "Ctrl+Alt+-",
                    "Ctrl+Alt+="
                ],
                "previousWindow":"Ctrl+Alt+Z",
                "nextWindow":"Ctrl+Alt+X",
                "globalSwitchingHotkeys":true
            },
            "performance":{
                "lockAffinity":true,
                "background":{
                    "maxFPS":30,
                    "calculate":true
                },
                "foreground":{
                    "maxFPS":60,
                    "calculate":true
                }
            },
            "windowLayout":{
                "useLayout":"Default",
                "layouts":[
                    {
                        "name":"Default",
                        "style": "horizontal"
                    },
                    {
                        "name":"Custom Layout"
                    }
                ]
            }
        },
        "propertyview.listbox":{
            "type":"listbox",
            "jsonTemplate":"listbox"
        },
        "basicCore.windowLayoutView":{
            "jsonTemplate":"listboxitem",
            "padding":2,
            "content":{
              "type":"textblock",
              "textBinding":{
                "pullFormat":"${_CONTEXTITEMDATA_.Get[name]}",
                "pullReplaceNull":""
              }
            }
        },
        "basicCore.launchProfileView":{
            "jsonTemplate":"listboxitem",
            "padding":2,
            "content":{
              "type":"textblock",
              "textBinding":{
                "pullFormat":"${_CONTEXTITEMDATA_.Get[name]}",
                "pullReplaceNull":""
              }
            }
        },
        "basicCore.slotHotkeyView":{
            "jsonTemplate":"listboxitem",
            "padding":2,
            "content":{
                "type":"stackpanel",
                "orientation":"horizontal",
                "children":[
                    {
                        "type":"textblock",
                        "textBinding":{
                        "pullFormat":"Slot ${_CONTEXTITEM_.Index}: ",
                        "pullReplaceNull":""
                        }
                    },
                    {
                        "type":"textblock",
                        "textBinding":{
                        "pullFormat":"${_CONTEXTITEMDATA_}",
                        "pullReplaceNull":""
                        }
                    }
                ]
            }
        },
        "basicCore.windowLayoutRegionEdit":{
            "type":"stackpanel",
            "orientation":"horizontal",
            "children":[
                {
                    "type":"textblock",
                    "text":"X: "
                },
                { 
                    "type":"textbox",
                    "minSize":[60,0],
                    "textBinding":{
                        "pullFormat":"${_CONTEXTITEMDATA_.Get[x]}",
                        "pullReplaceNull":"",
                        "pushFormat":["_CONTEXTITEMDATA_:SetInteger[x,","]"]
                    },
                    "textBindingUsesFocus":true
                },
                {
                    "type":"textblock",
                    "text":"Y: "
                },
                { 
                    "type":"textbox",
                    "minSize":[60,0],
                    "textBinding":{
                        "pullFormat":"${_CONTEXTITEMDATA_.Get[y]}",
                        "pullReplaceNull":"",
                        "pushFormat":["_CONTEXTITEMDATA_:SetInteger[y,","]"]
                    },
                    "textBindingUsesFocus":true
                },
                {
                    "type":"textblock",
                    "text":"W: "
                },
                { 
                    "type":"textbox",
                    "minSize":[60,0],
                    "textBinding":{
                        "pullFormat":"${_CONTEXTITEMDATA_.Get[width]}",
                        "pullReplaceNull":"",
                        "pushFormat":["_CONTEXTITEMDATA_:SetInteger[width,","]"]
                    },
                    "textBindingUsesFocus":true
                },
                {
                    "type":"textblock",
                    "text":"H: "
                },
                { 
                    "type":"textbox",
                    "minSize":[60,0],
                    "textBinding":{
                        "pullFormat":"${_CONTEXTITEMDATA_.Get[height]}",
                        "pullReplaceNull":"",
                        "pushFormat":["_CONTEXTITEMDATA_:SetInteger[height,","]"]
                    },
                    "textBindingUsesFocus":true
                }
            ]
        },
        "basicCore.windowLayoutRegionView":{
            "jsonTemplate":"listboxitem",
            "padding":2,
            "content":{
                "jsonTemplate":"basicCore.windowLayoutRegionEdit"
            }
        }
    },
    "elements":[
        {
            "type":"panel",
            "visibility": "hidden",
            "name":"basicCore.events"
        },
        {
            "type":"window",
            "name":"basicCore.mainWindow",
            "title":"Joe Multiboxer: Basic Core",
            "hideOnClose": true,
            "horizontalAlignment": "center",
            "verticalAlignment": "center",
            "width":500,
            "height":300,
            "content":{
                "type":"dockpanel",
                "horizontalAlignment": "stretch",
                "verticalAlignment": "stretch",                
                "children":[
                    {
                        "_dock":"bottom",
                        "horizontalAlignment": "stretch",
                        "type":"dockpanel",
                        "children":[
                            {
                                "type":"button",
                                "_dock":"right",
                                "content":"Reload Agent",
                                "eventHandlers": {
                                    "onPress":{
                                        "type":"code",
                                        "code":"JMB.Agent[Basic Core]:Stop:Reload:Start"
                                    }
                                }
                            }
                        ]
                    },
                    {
                        "_dock":"top",
                        "type":"tabcontrol",
                        "verticalAlignment": "stretch",
                        "horizontalAlignment": "stretch",
                        "tabs":[
                            {
                                "type":"tab",
                                "header":"Launcher",
                                "content":{
                                    "type":"dockpanel",
                                    "horizontalAlignment": "stretch",
                                    "verticalAlignment": "stretch",
                                    "children":[
                                        {
                                            "_dock":"left",
                                            "type":"dragger",
                                            "width":200,
                                            "allowMove":false,
                                            "allowResize":true,
                                            "borderThickness":[0,0,5,0],
                                            "borderBrush":{"color":[0.5,0.5,0.5]},
                                            "content":{
                                                "type":"listbox",
                                                "_dock":"left",
                                                "verticalAlignment":"stretch",
                                                "horizontalAlignment":"stretch",
                                                "itemsBinding":{
                                                    "pullFormat":"${BasicCore.Settings.Launcher.Get[profiles]}",
                                                    "pullHook": {   
                                                        "elementName": "basicCore.events",
                                                        "flags": "global",
                                                        "event": "onLauncherProfilesUpdated"
                                                    }
                                                },
                                                "itemViewGenerators":{
                                                    "default":{
                                                        "type":"template",
                                                        "template":"basicCore.launchProfileView"
                                                    }
                                                },
                                                "selectedItemBinding":{
                                                    "pullFormat":"${BasicCore.SelectedLauncherProfile.Get[name]}",
                                                    "pushFormat":["BasicCore:SetSelectedLauncherProfile[\"","\"]"]
                                                },
                                                "selectedItemBindingProperty":"name"
                                            }
                                        },
                                        {
                                            "_dock":"left",
                                            "type":"dockpanel",
                                            "verticalAlignment":"stretch",
                                            "horizontalAlignment":"stretch",
                                            "children":[
                                                {
                                                    "_dock":"bottom",
                                                    "type":"button",
                                                    "content":"Launch!",
                                                    "horizontalAlignment":"right"
                                                }
                                            ]
                                        }
                                    ]
                                }
                            },
                            {
                                "type":"tab",
                                "header":"Launch Profiles",
                                "content":{
                                    "type":"dockpanel",
                                    "horizontalAlignment": "stretch",
                                    "verticalAlignment": "stretch",
                                    "children":[
                                        {
                                            "type":"dockpanel",
                                            "_dock":"top",
                                            "children":[
                                                {
                                                    "type":"button",
                                                    "_dock":"right",
                                                    "content":"Delete",
                                                    "eventHandlers":{
                                                        "onPress":{
                                                            "type":"method",
                                                            "object":"BasicCore",
                                                            "method":"OnDeleteLaunchProfileButton"
                                                        }
                                                    }
                                                },
                                                {
                                                    "type":"button",
                                                    "_dock":"right",
                                                    "content":"Copy",
                                                    "eventHandlers":{
                                                        "onPress":{
                                                            "type":"method",
                                                            "object":"BasicCore",
                                                            "method":"OnCopyLaunchProfileButton"
                                                        }
                                                    }
                                                },
                                                {
                                                    "type":"combobox",
                                                    "_dock":"left",
                                                    "horizontalAlignment": "stretch",
                                                    "itemsBinding":{
                                                        "pullFormat":"${BasicCore.Settings.Launcher.Get[profiles]}",
                                                        "pullHook": {   
                                                            "elementName": "basicCore.events",
                                                            "flags": "global",
                                                            "event": "onLauncherProfilesUpdated"
                                                        }
                                                    },
                                                    "itemViewGenerators":{
                                                        "default":{
                                                            "type":"template",
                                                            "template":"basicCore.launchProfileView"
                                                        }
                                                    },
                                                    "selectedItemBinding":{
                                                        "pullFormat":"${BasicCore.SelectedLauncherProfile.Get[name]}",
                                                        "pushFormat":["BasicCore:SetSelectedLauncherProfile[\"","\"]"]
                                                    },
                                                    "selectedItemBindingProperty":"name"
                                                }
                                            ]
                                        },                                        
                                        {
                                            "type":"objectview",
                                            "_dock":"top",
                                            "objectBinding": {
                                                "pullFormat":"${BasicCore.SelectedLauncherProfile}"
                                            },
                                            "properties":[
                                                {
                                                    "name":"Profile Name",
                                                    "dataBinding":{
                                                      "pullFormat":"${_CONTEXT_.Object.Get[name]}",
                                                      "pullReplaceNull":"",
                                                      "pushFormat":["_CONTEXT_.Object:SetString[name,\"","\"]"]
                                                    },
                                                    "editTemplate":"propertyview.textbox"                            
                                                },
                                                {
                                                    "name":"Game",
                                                    "dataBinding":{
                                                      "pullFormat":"${_CONTEXT_.Object.Get[game]}",
                                                      "pullReplaceNull":"",
                                                      "pushFormat":["_CONTEXT_.Object:SetString[game,\"","\"]"]
                                                    },
                                                    "editTemplate":"propertyview.textbox"                            
                                                },
                                                {
                                                    "name":"Path",
                                                    "dataBinding":{
                                                      "pullFormat":"${_CONTEXT_.Object.Get[path]}",
                                                      "pullReplaceNull":"",
                                                      "pushFormat":["_CONTEXT_.Object:SetString[path,\"","\"]"]
                                                    },
                                                    "editTemplate":"propertyview.textbox"                            
                                                },
                                                {
                                                    "name":"Executable",
                                                    "dataBinding":{
                                                      "pullFormat":"${_CONTEXT_.Object.Get[executable]}",
                                                      "pullReplaceNull":"",
                                                      "pushFormat":["_CONTEXT_.Object:SetString[executable,\"","\"]"]
                                                    },
                                                    "editTemplate":"propertyview.textbox"                            
                                                },
                                                {
                                                    "name":"Parameters",
                                                    "dataBinding":{
                                                      "pullFormat":"${_CONTEXT_.Object.Get[parameters]}",
                                                      "pullReplaceNull":"",
                                                      "pushFormat":["_CONTEXT_.Object:SetString[parameters,\"","\"]"]
                                                    },
                                                    "editTemplate":"propertyview.textbox"                            
                                                }
                                            ]
                                        }
                                    ]
                                }
                            },
                            {
                                "type":"tab",
                                "header":"General",
                                "content":{
                                    "type":"dockpanel",
                                    "horizontalAlignment":"stretch",
                                    "verticalAlignment":"stretch",
                                    "children":[
                                        {
                                            "type":"objectview",
                                            "_dock":"top",
                                            "objectBinding": {
                                                "pullFormat":"${BasicCore.Settings}",
                                                "pullOnce":true
                                            },
                                            "properties":[
                                                {
                                                    "name":"Window Layout",                                                    
                                                    "editTemplate":"propertyview.combobox",
                                                    "controlData":{
                                                        "selectedItemBinding":{
                                                            "pullFormat":"${BasicCore.Settings.WindowLayout.Get[useLayout]}",
                                                            "pullReplaceNull":"",
                                                            "pushFormat":["BasicCore.Settings.WindowLayout:SetString[useLayout,\"","\"]"]
                                                        },
                                                        "selectedItemBindingProperty":"name",
                                                        "itemsBinding":{
                                                            "pullFormat":"${BasicCore.Settings.WindowLayout.Get[layouts]}"
                                                        },
                                                        "itemViewGenerators":{
                                                            "default":{
                                                                "type":"template",
                                                                "template":"basicCore.windowLayoutView"
                                                            }
                                                        }
                                                    }
                                                },
                                                {
                                                    "name":"Highlighter",
                                                    "dataBinding":{
                                                      "pullFormat":"${_CONTEXT_.Object.Highlighter.Get[enable]}",
                                                      "pullReplaceNull":"",
                                                      "pushFormat":["_CONTEXT_.Object.Highlighter:SetBool[enable,\"","\"]"]
                                                    },
                                                    "editTemplate":"propertyview.checkbox"                            
                                                },
                                                {
                                                    "name":"Lock CPU Affinity",
                                                    "dataBinding":{
                                                        "pullFormat":"${_CONTEXT_.Object.Performance.Get[lockAffinity]}",
                                                        "pullReplaceNull":"",
                                                        "pushFormat":["_CONTEXT_.Object.Performance:SetBool[lockAffinity,\"","\"]"]
                                                    },
                                                    "editTemplate":"propertyview.checkbox"                            
                                                },
                                                {
                                                    "name":"Foreground FPS",
                                                    "dataBinding":{
                                                        "pullFormat":"${_CONTEXT_.Object.Performance.Get[foreground,maxFPS]}",
                                                        "pullReplaceNull":"",
                                                        "pushFormat":["_CONTEXT_.Object.Performance.Get[foreground]:SetInteger[maxFPS,\"","\"]"]
                                                    },
                                                    "editTemplate":"propertyview.textbox"
                                                },
                                                {
                                                    "name":"   ⮩ Minimum",
                                                    "dataBinding":{
                                                        "pullFormat":"${_CONTEXT_.Object.Performance.Get[foreground,calculate]}",
                                                        "pullReplaceNull":"",
                                                        "pushFormat":["_CONTEXT_.Object.Performance.Get[foreground]:SetBool[calculate,\"","\"]"]
                                                    },
                                                    "editTemplate":"propertyview.checkbox"
                                                },
                                                {
                                                    "name":"Background FPS",
                                                    "dataBinding":{
                                                        "pullFormat":"${_CONTEXT_.Object.Performance.Get[background,maxFPS]}",
                                                        "pullReplaceNull":"0",
                                                        "pushFormat":["_CONTEXT_.Object.Performance.Get[background]:SetInteger[maxFPS,\"","\"]"]
                                                    },
                                                    "editTemplate":"propertyview.textbox"
                                                },
                                                {
                                                    "name":"   ⮩ Minimum",
                                                    "dataBinding":{
                                                        "pullFormat":"${_CONTEXT_.Object.Performance.Get[background,calculate]}",
                                                        "pullReplaceNull":"",
                                                        "pushFormat":["_CONTEXT_.Object.Performance.Get[background]:SetBool[calculate,\"","\"]"]
                                                    },
                                                    "editTemplate":"propertyview.checkbox"
                                                }
                                            ]
                                        }
                                    ]
                                }
                            },
                            {
                                "type":"tab",
                                "header":"Hotkeys",
                                "content":{
                                    "type":"dockpanel",
                                    "horizontalAlignment":"stretch",
                                    "verticalAlignment":"stretch",
                                    "children":[
                                        {
                                            "type":"objectview",
                                            "_dock":"top",
                                            "objectBinding": {
                                                "pullFormat":"${BasicCore.Settings}",
                                                "pullOnce":true
                                            },
                                            "properties":[
                                                {
                                                    "name":"Switching Hotkeys are Windows Hotkeys",
                                                    "dataBinding":{
                                                      "pullFormat":"${_CONTEXT_.Object.Hotkeys.Get[globalSwitchingHotkeys]}",
                                                      "pullReplaceNull":"",
                                                      "pushFormat":["_CONTEXT_.Object.Hotkeys:SetBool[globalSwitchingHotkeys,\"","\"]"]
                                                    },
                                                    "editTemplate":"propertyview.checkbox"                            
                                                },
                                                {
                                                    "name":"Previous Window",
                                                    "dataBinding":{
                                                        "pullFormat":"${_CONTEXT_.Object.Hotkeys.Get[previousWindow]}",
                                                        "pullReplaceNull":"",
                                                        "pushFormat":["_CONTEXT_.Object.Hotkeys:SetString[previousWindow,\"","\"]"]
                                                      },
                                                      "editTemplate":"propertyview.inputCombo"
                                                },
                                                {
                                                    "name":"Next Window",
                                                    "dataBinding":{
                                                        "pullFormat":"${_CONTEXT_.Object.Hotkeys.Get[nextWindow]}",
                                                        "pullReplaceNull":"",
                                                        "pushFormat":["_CONTEXT_.Object.Hotkeys:SetString[nextWindow,\"","\"]"]
                                                      },
                                                      "editTemplate":"propertyview.inputCombo"
                                                }
                                            ]
                                        },
                                        {
                                            "type":"textblock",
                                            "_dock":"top",
                                            "text":"Slot Activation Hotkeys"
                                        },
                                        {
                                            "type":"dockpanel",
                                            "_dock":"bottom",
                                            "horizontalAlignment":"stretch",
                                            "children":[
                                                {
                                                    "type":"button",
                                                    "content":"Add"
                                                },
                                                {
                                                    "type":"button",
                                                    "content":"Remove"
                                                }
                                            ]
                                        },
                                        {
                                            "type":"listbox",
                                            "_dock":"top",
                                            "horizontalAlignment":"stretch",
                                            "verticalAlignment":"stretch",
                                            "itemsBinding":{
                                                "pullFormat":"${BasicCore.Settings.Hotkeys.Get[slotHotkeys]}"
                                            },
                                            "itemViewGenerators":{
                                                "default":{
                                                    "type":"template",
                                                    "template":"basicCore.slotHotkeyView"
                                                }
                                            }
                                        }
                                    ]
                                }
                            },
                            {
                                "type":"tab",
                                "header":"Window Layouts",
                                "content":{
                                    "type":"dockpanel",
                                    "horizontalAlignment":"stretch",
                                    "verticalAlignment":"stretch",
                                    "children":[
                                        {
                                            "type":"dockpanel",
                                            "_dock":"top",
                                            "children":[
                                                {
                                                    "type":"button",
                                                    "_dock":"right",
                                                    "content":"Delete",
                                                    "eventHandlers":{
                                                        "onPress":{
                                                            "type":"method",
                                                            "object":"BasicCore",
                                                            "method":"OnDeleteWindowLayoutButton"
                                                        }
                                                    }
                                                },
                                                {
                                                    "type":"button",
                                                    "_dock":"right",
                                                    "content":"Copy",
                                                    "eventHandlers":{
                                                        "onPress":{
                                                            "type":"method",
                                                            "object":"BasicCore",
                                                            "method":"OnCopyWindowLayoutButton"
                                                        }
                                                    }
                                                },
                                                {
                                                    "type":"combobox",
                                                    "_dock":"left",
                                                    "horizontalAlignment": "stretch",
                                                    "itemsBinding":{
                                                        "pullFormat":"${BasicCore.Settings.WindowLayout.Get[layouts]}",
                                                        "pullHook": {   
                                                            "elementName": "basicCore.events",
                                                            "flags": "global",
                                                            "event": "onWindowLayoutsUpdated"
                                                        }
                                                    },
                                                    "itemViewGenerators":{
                                                        "default":{
                                                            "type":"template",
                                                            "template":"basicCore.windowLayoutView"
                                                        }
                                                    },
                                                    "selectedItemBinding":{
                                                        "pullFormat":"${BasicCore.EditingWindowLayout.Get[name]}",
                                                        "pushFormat":["BasicCore:SetEditingWindowLayout[\"","\"]"]
                                                    },
                                                    "selectedItemBindingProperty":"name"
                                                }
                                            ]
                                        },
                                        {
                                            "type":"objectview",
                                            "_dock":"top",
                                            "objectBinding": {
                                                "pullFormat":"${BasicCore.EditingWindowLayout}"
                                            },
                                            "properties":[
                                                {
                                                    "name":"Layout Name",
                                                    "dataBinding":{
                                                      "pullFormat":"${_CONTEXT_.Object.Get[name]}",
                                                      "pullReplaceNull":"",
                                                      "pushFormat":["_CONTEXT_.Object:SetString[name,\"","\"]"]
                                                    },
                                                    "editTemplate":"propertyview.textbox"                            
                                                },
                                                {
                                                    "name":"Style",
                                                    "dataBinding":{
                                                      "pullFormat":"${_CONTEXT_.Object.Get[style]}",
                                                      "pullReplaceNull":"",
                                                      "pushFormat":["_CONTEXT_.Object:SetString[style,\"","\"]"]
                                                    },
                                                    "editTemplate":"propertyview.textbox"                            
                                                },
                                                {
                                                    "name":"Swap when Focused",
                                                    "dataBinding":{
                                                      "pullFormat":"${_CONTEXT_.Object.Get[swapOnActivate]}",
                                                      "pushFormat":["_CONTEXT_.Object:SetBool[swapOnActivate,\"","\"]"]
                                                    },
                                                    "editTemplate":"propertyview.checkbox"                            
                                                },
                                                {
                                                    "name":"Swap when Focused by JMB Hotkey",
                                                    "dataBinding":{
                                                      "pullFormat":"${_CONTEXT_.Object.Get[swapOnHotkeyFocused]}",
                                                      "pushFormat":["_CONTEXT_.Object:SetBool[swapOnHotkeyFocused,\"","\"]"]
                                                    },
                                                    "editTemplate":"propertyview.checkbox"                            
                                                },
                                                {
                                                    "name":"Leave Hole",
                                                    "dataBinding":{
                                                        "pullFormat":"${_CONTEXT_.Object.Get[leaveHole]}",
                                                        "pushFormat":["_CONTEXT_.Object:SetBool[leaveHole,\"","\"]"]
                                                      },
                                                      "editTemplate":"propertyview.checkbox"                            
                                                },
                                                {
                                                    "name":"Focus Follows Mouse",
                                                    "dataBinding":{
                                                        "pullFormat":"${_CONTEXT_.Object.Get[focusFollowsMouse]}",
                                                        "pushFormat":["_CONTEXT_.Object:SetBool[focusFollowsMouse,\"","\"]"]
                                                      },
                                                      "editTemplate":"propertyview.checkbox"                            
                                                },
                                                {
                                                    "name":"Avoid Taskbar",
                                                    "dataBinding":{
                                                        "pullFormat":"${_CONTEXT_.Object.Get[avoidTaskbar]}",
                                                        "pushFormat":["_CONTEXT_.Object:SetBool[avoidTaskbar,\"","\"]"]
                                                      },
                                                      "editTemplate":"propertyview.checkbox"                            
                                                },
                                                {
                                                    "name":"Rescale Windows",
                                                    "dataBinding":{
                                                        "pullFormat":"${_CONTEXT_.Object.Get[rescaleWindows]}",
                                                        "pushFormat":["_CONTEXT_.Object:SetBool[rescaleWindows,\"","\"]"]
                                                      },
                                                      "editTemplate":"propertyview.checkbox"                            
                                                }
                                            ]
                                        }
                                    ]
                                }
                            },
                            {
                                "type":"tab",
                                "header":"Round-Robin",
                                "content":{
                                    "type":"dockpanel",
                                    "horizontalAlignment":"stretch",
                                    "verticalAlignment":"stretch"
                                }
                            }
                        ]                        
                    }
                ]
            }
        }
    ]
}