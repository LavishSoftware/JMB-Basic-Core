{
    "$schema": "http://www.lavishsoft.com/schema/agent.json",
    "name": "Basic Core",
    "platforms": {
        "joe multiboxer uplink": {
            "eventHandlers": {
                "onAgentStartup": {
                    "code": [
                        "run BasicCore.Uplink.iss"
                    ]
                },
                "onAgentShutdown": {
                    "code": [
                        "endscript BasicCore.Uplink"
                    ]
                }
            }
        },
        "joe multiboxer session": {
            "eventHandlers": {
                "onAgentStartup": {
                    "code": [
                        "run BasicCore.Session.iss"
                    ]
                },
                "onAgentShutdown": {
                    "code": [
                        "endscript BasicCore.Session"
                    ]
                }
            }
        }
    }
}