{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type":"object",
    "title":"Basic Core Settings",
    "definitions":{
        "windowRegion":{
            "type":"object",
            "properties":{
                "x":{
                    "type":"integer"
                },
                "y":{
                    "type":"integer"
                },
                "width":{
                    "type":"integer"
                },
                "height":{
                    "type":"integer"
                }
            }
        },
        "windowLayout":{
            "type":"object",
            "properties":{
                "name":{
                    "type":"string"
                },
                "swapOnActivate":{
                    "type":"boolean",
                    "default":true
                },
                "swapOnHotkeyFocused":{
                    "type":"boolean",
                    "default":true
                },
                "leaveHole":{
                    "type":"boolean"
                },
                "focusFollowsMouse":{
                    "type":"boolean"
                },
                "avoidTaskbar":{
                    "type":"boolean"
                },
                "rescaleWindows":{
                    "type":"boolean",
                    "default":true
                },
                "useMonitors":{
                    "type":"array",
                    "items": {
                        "type":"integer",
                        "title":"Monitor Number (1-based)"
                    }
                },
                "style":{
                    "type":"string",
                    "enum": ["horizontal","veritcal","custom"]
                },
                "mainRegion":{
                    "allOf": [
                        {
                            "$ref": "#/definitions/windowRegion"
                        }
                    ],
                    "title":"Main Region"
                },
                "regions":{
                    "type":"array",
                    "items": {
                        "$ref": "#/definitions/windowRegion"
                    }
                }
            }
        },
        "maxFPS":{
            "type":"object",
            "properties": {
                "maxFPS":{
                    "type":"integer"
                },
                "calculate":{
                    "type":"boolean"
                }
            }
        },
        "virtualFile":{
            "type":"object",
            "properties":{
                "pattern":{
                    "type":"string"
                },
                "replacement":{
                    "type":"string"
                }
            }
        },
        "launchProfile":{
            "type":"object",
            "properties": {
                "name":{
                    "type":"string"
                },
                "game":{
                    "type":"string"
                },
                "path":{
                    "type":"string"
                },
                "executable":{
                    "type":"string"
                },
                "parameters":{
                    "type":"string"
                },
                "virtualFiles":{
                    "type":"array",
                    "items":{
                        "$ref":"#/definitions/virtualFile"
                    }
                }
            },
            "required":["name"]
        },
        "launcherSettings":{
            "type":"object",
            "properties":{
                "lastSelectedProfile":{
                    "type":"string"
                },
                "profiles":{
                    "type":"array",
                    "items":{
                        "$ref":"#/definitions/launchProfile"
                    }
                }
            }
        },
        "hotkeySettings":{
            "type":"object",
            "properties": {
                "globalSwitchingHotkeys":{
                    "type":"boolean"
                },
                "slotHotkeys":{
                    "type":"array",
                    "items": {
                        "type":"string"
                    }
                },
                "previousWindow":{
                    "type":"string"
                },
                "nextWindow":{
                    "type":"string"
                }
            }
        },
        "highlighterSettings":{
            "type":"object",
            "properties": {
                "showBorder":{
                    "type":"boolean"
                },
                "showNumber":{
                    "type":"boolean"
                },
                "highlightFullSize":{
                    "type":"boolean"
                }
            }
        },       
        "performanceSettings":{
            "type":"object",
            "properties": {
                "lockAffinity":{
                    "type":"boolean"
                },
                "background":{
                    "$ref": "#/definitions/maxFPS"
                },
                "foreground":{
                    "$ref": "#/definitions/maxFPS"
                }
            }
        },
        "windowLayoutSettings":{
            "type":"object",
            "properties": {
                "useLayout":{
                    "type":"string"
                },
                "layouts":{
                    "type":"array",
                    "items": {
                        "$ref":"#/definitions/windowLayout"
                    }
                }        
            }
        },
        "roundRobinSettings":{
            "type":"object",
            "properties":{
                "keyCombos":{
                    "type":"array",
                    "items": {
                        "type":"string"
                    }
                }
            }
        }
    },
    "properties":{
        "launcher":{
            "$ref": "#/definitions/launcherSettings"
        },
        "highlighter":{
            "$ref": "#/definitions/highlighterSettings"
        },
        "hotkeys":{
            "$ref": "#/definitions/hotkeySettings"
        },
        "performance":{
            "$ref": "#/definitions/performanceSettings"
        },
        "windowLayout":{
            "$ref": "#/definitions/windowLayoutSettings"
        },
        "roundRobin":{
            "$ref":"#/definitions/roundRobinSettings"
        }
    }
}